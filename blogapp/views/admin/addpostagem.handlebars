{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control mb-2" required>

            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control mb-2" required>

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control mb-2" required>

            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" cols="30" rows="10" class="form-control mb-2" required></textarea>

            <label for="categoria">Categoria</label>
            <select name="categoria" class="custom-select mb-4">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>                
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button class="btn btn-success" type="submit">Criar postagem</button>
        </form>
    </div>
</div>